  <div class='boxed white icij-users-content'>
    <div class="icij-users-contents icij-users icij-users-list">
      <div class="icij-users-container">
        <div class="icij-users-title">
          <h2>I-Hub Users</h2>
        </div>
        <div class="username controls">
          <!-- {{log searchHint}}
          {{text-field value=listFilter placeholder=searchHint}} -->
        </div>
        {{#conditional-loading-spinner condition=refreshing}}
          {{#if model}}
            <table class='table users-list grid'>
              <thead>
                <th>{{i18n 'username'}}</th>
                <th class='email-heading'>{{i18n 'email'}}</th>
                <th>Country</th>
                <th>Last Seen</th>
                <th>Created</th>
              </thead>
              <tbody>
                {{#each model as |user|}}
                  <tr class="user {{user.selected}} {{unless user.active 'not-activated'}}">
                    <td class="username">
                      {{user-info user=user}}
                    </td>
                    <td class='email'>
                      {{user.email}}
                    </td>
                    <td class='country'>
                      {{log user.country}}
                      {{user.country}}
                    </td>
                    <td class="last-seen">
                      <div class="label">{{i18n 'last_seen'}}</div>
                      <div>{{{format-duration user.last_seen_age}}}</div>
                    </td>
                    <td class="created">
                      <div class="label">{{i18n 'created'}}</div>
                      <div>{{{format-duration user.created_at_age}}}</div>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>

          {{else}}
            <p>{{i18n 'search.no_results'}}</p>
          {{/if}}
        {{/conditional-loading-spinner}}
      </div>
    </div>
  </div>
